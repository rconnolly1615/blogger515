<br /><h1 align="center">Blog Posts</h1>

<table border align="center">
  <thead>
    <tr>
      <th>Subject</th>
      <th>Text</th>
      <th>Num comments</th>
      <th>Blog</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blog_posts.each do |post| %>
      <tr>
        <td><%= post.subject %></td>
        <td><%= post.text %></td>
        <td align="center"><%= post.num_comments %></td>
        <td align="center"><%= post.blog_id %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_blog_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Blog Post', new_blog_post_path %>
